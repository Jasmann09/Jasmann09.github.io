<%- include('partials/nav'); -%>
<body>
    <div class="main">
    <div class="left">
        
     <!-- Default dropend button -->
     <%- include('partials/left'); -%>

    </div>
    <div class="right">
     
          <% if(nn.length >=0){%>
            <% nn.forEach(data => {%>
          <table class="table table-striped table-hover">
            <table class="table">

         <i><h1><%= data.name %></h1></i>
         <h3>Serving Size-<%= data.serving_size_g %></h3>
        <thead>
            <tr>
              <th scope="col">Nutrient </th>
              <th scope="col">Quantity</th>
          
            </tr>
          </thead>
         
                <tbody>
                  <tr>
                    <td> Sugar </td>
                    <td><%= data.sugar_g %>g</td>
                  </tr>
                  <tr>
                    <td>  Fiber</td>
                    <td><%= data.fiber_g %>g</td>
                  </tr>
                  <tr>
                    <td> Calories </td>
                    <td><%= data.calories %> Kcal</td>
                  </tr>
                  <tr>
                    <td> Cholestrol </td>
                    <td><%= data.cholesterol_mg %> mg</td>
                  </tr>
                  <tr>
                    <td> Protien </td>
                    <td><%= data.protein_g %>g</td>
                  </tr>
                  <tr>
                    <td> Carbohydrates </td>
                    <td><%= data.carbohydrates_total_g%>g</td>
                  </tr>
                  <tr>
                    <td> Fats </td>
                    <td><%= data.fat_total_g%>g</td>
                  </tr>
                  <tr>
                    <td> Potassium </td>
                    <td><%= data.potassium_mg%>mg</td>
                  </tr>
                
                  
                  
                  
                  

                </tbody>

          <% }) %>
          <% } %>

        </table>
    </table>

    </div>
    </div>
    <style>
        h1{
            text-align: center;
            margin-right: 2em;
        }
        h3{
            text-align: right;
        }
    </style>


   
    

</body>
</html>
